pipeline {
    agent {
        label "dind-apline-05cpu-1gb"
    }
    stages{
        stage('start') {
            steps {
                sendNotifications "STARTED"
            }
        }
        stage('build image') {
            steps {
                dir('ops/jenkins/build-agents/alpine/ask-nonprod'){
                    script {
                        docker.withRegistry('https://348180535083.dkr.ecr.us-west-2.amazonaws.com', 'ecr:us-west-2:cmdt_jenkins_aws_credentials' ) {
                            docker.build("cmd/ask-np-jnlp-slave:${env.GIT_COMMIT.take(7)}")
                            docker.build("cmd/ask-np-jnlp-slave:latest")
                        }
                    }
                }
            }
        }
        stage('push image') {
            steps {
                dir('ops/jenkins/build-agents/alpine/ask-nonprod'){
                    script {
                        docker.withRegistry('https://348180535083.dkr.ecr.us-west-2.amazonaws.com', 'ecr:us-west-2:cmdt_jenkins_aws_credentials') {
                            docker.image("cmd/ask-np-jnlp-slave:${env.GIT_COMMIT.take(7)}").push()
                            docker.image("cmd/ask-np-jnlp-slave:latest").push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            sendNotifications currentBuild.currentResult
        }
    }
}